<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp"
    app:checkedIconTint="#FFFFFF">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="9dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"
                android:orientation="vertical"
                app:cardBackgroundColor="@color/green"
                app:cardCornerRadius="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="3dp"
                    android:fontFamily="@font/plus_jakarta_sans_semibold"
                    android:gravity="center"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="@string/twnty"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="148dp"
                android:layout_height="116dp"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/image_removebg_preview__8__1"
                android:contentDescription="@string/onion_e" />


            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="9dp"
                android:fontFamily="@font/plus_jakarta_sans_bold"
                android:text="@string/onion_e"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="9dp"
                android:fontFamily="@font/plus_jakarta_sans_regular"
                android:text="@string/one"
                android:textColor="@color/gray"
                android:textSize="14sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="9dp"
                        android:fontFamily="@font/plus_jakarta_sans_bold"
                        android:text="@string/rs"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="9dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/line"
                        android:fontFamily="@font/plus_jakarta_sans_semibold"
                        android:text="@string/rs1"
                        android:textColor="@color/lite"
                        android:textSize="11sp" />
                </LinearLayout>


                <Button
                    android:id="@+id/button3"
                    android:layout_width="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="5dp"
                    android:layout_height="32dp"
                    android:layout_gravity ="end"
                    android:layout_marginBottom="9dp"
                    android:fontFamily="@font/plus_jakarta_sans_semibold"
                    android:text="@string/add"
                    android:textColor="@color/blue"
                    android:textSize="7sp"
                    app:backgroundTint="@android:color/transparent"
                    app:cornerRadius="5dp"
                    app:strokeColor="@color/blue"
                    app:strokeWidth="1dp" />


            </LinearLayout>


        </LinearLayout>


</androidx.cardview.widget.CardView>